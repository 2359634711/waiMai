/* components/reduceAdd/reduceAdd.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.clear {
  clear: both;
}

.shu_right {
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 131rpx;
  height: 46rpx;
  border: 1rpx solid #f7bc54;
  border-radius: 100rpx;
  line-height: 46rpx;
  position: relative;
}

.shu_right_z {
  background: rgba(0, 0, 0, 0);
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 46rpx;
  height: 46rpx;
  border: 1rpx solid rgba(0, 0, 0, 0);
  border-radius: 100rpx;
  line-height: 46rpx;
  position: relative;
}

.shu_right>view {
  width: 33.33%;
  height: 46rpx;
  text-align: center;
}

.reduce {
  font-size: 30rpx;
  color: #f7bc54;
  font-weight: bold;
  position: relative;
  width: 50rpx;
  height: 46rpx;
}

.reduce::before {
  content: '';
  position: absolute;
  top: 22rpx;
  left: 15rpx;
  width: 20rpx;
  height: 6rpx;
  background: var(--themeBackC);
}

.number {
  font-size: 30rpx;
  color: #333;
  text-align: center;
}

.add {
  text-align: center;
  width: 48rpx;
  height: 48rpx;
  font-size: 30rpx;
  color: #fff;
  background: var(--themeBackC);
  border-radius: 100%;
}
