/* components/couponItem/couponItem.wxss */

.couponBack {
  background: #fff;
  margin: 20rpx 25rpx;
  padding: 30rpx 26rpx;
  position: relative;
}

.couponItem {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  white-space: nowrap;
  align-items: center;
  border: 1rpx dashed #ccc;
  padding: 45rpx;
}

.couponItem::after {
  content: '';
  position: absolute;
  background: var(--bgColor);
  width: 40rpx;
  height: 40rpx;
  border-radius: 100rpx;
  left: 210rpx;
  bottom: -20rpx;
}

.couponItem::before {
  content: '';
  position: absolute;
  background: var(--bgColor);
  width: 40rpx;
  height: 40rpx;
  border-radius: 100rpx;
  top: -20rpx;
  left: 210rpx;
}

.couponLeft {
  display: flex;
  flex-direction: column;
}

.couponPrice {
  display: flex;
  flex-direction: row;
  font-size: 56rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(225, 55, 47, 1);
  align-items: baseline;
}

.couponPrice view {
  font-size: 24rpx;
}

.fontInfo {
  font-size: 26rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

.couponValid {
  margin-top: 10rpx;
}

.fontTitle {
  font-size: 36rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(28, 28, 28, 1);
}

.couponBtn {
  font-size: 18rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 255, 255, 1);
  background: var(--themeBackCG);
  border-radius: 100rpx;
  width: 93rpx;
  height: 33rpx;
  line-height: 33rpx;
  text-align: center;
}
