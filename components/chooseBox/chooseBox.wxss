/* components/chooseBox/chooseBox.wxss */

.chooseBox {
  position: fixed;
  bottom: 0;
  height: 855rpx;
  width: 100%;
  border-radius: 30rpx 30rpx 0 0;
  z-index: 2;
  overflow: scroll;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  background: var(--bgColor);
}

.chooseBoxTop {
  line-height: 105rpx;
  height: 105rpx;
  background: #fff;
  width: 100%;
}

.chooseBoxMiddle {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  width: 100%;
  flex-grow: 1;
}

.middleLeft {
  width: 220rpx;
  background: var(--bgColor);
}

.middleRight {
  flex-grow: 1;
}

.chooseBoxBottom {
  line-height: 100rpx;
  height: 100rpx;
  background: #fff;
  width: 100%;
  margin-top: 3rpx;
}

.chooseMask {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1;
}

.scroll-view {
  height: 100%;
}
