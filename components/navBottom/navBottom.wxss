/* components/navBottom/navBottom.wxss */

.navBottomV {
  position: fixed;
  bottom: 50rpx;
  width: 100rpx;
  right: 30rpx;
}

.navBox {
  position: relative;
  overflow: hidden;
  border-radius: 100rpx;
}

.navItem {
  width: 94rpx;
  height: 94rpx;
  margin-top: 20rpx;
  border-radius: 100rpx;
  overflow: hidden;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  font-size: 17rpx;
  color: #fff;
  background: var(--themeBackC);
}

.navItem .icon {
  width: 50rpx;
  height: 50rpx;
}

@keyframes close {
  from {
    height: 580rpx;
  }

  to {
    height: 0rpx;
  }
}

@keyframes open {
  from {
    height: 0rpx;
  }

  to {
    height: 580rpx;
  }
}

.icon image {
  width: 100%;
  height: 100%;
}

.close image {
  width: 100%;
  height: 100%;
}

