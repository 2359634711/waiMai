/* components/cardBar/carBar.wxss */

.fl {
  float: left;
}

.fr {
  float: right;
}

.clear {
  clear: both;
}

/* 底部导航 */

.footer {
  width: 648rpx;
  height: 98rpx;
  line-height: 98rpx;
  margin: 0 auto;
  background: #fff;
  border-radius: 49rpx;
  position: fixed;
  bottom: 9rpx;
  left: 24rpx;
  box-shadow: 0px 0px 5px #f5f5f5;
  padding-left: 45rpx;
  padding-right: 9rpx;
}

.footer>image {
  width: 78rpx;
  height: 78rpx;
  position: relative;
  top: -10rpx;
  margin-right: 16rpx;
}

.food {
  font-size: 28rpx;
  color: #999;
}

.selected {
  width: 180rpx;
  height: 80rpx;
  background: #cdcdcd;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
  margin-top: 9rpx;
}

/* 展开列表开始 */

.select_status {
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.5;
  position: fixed;
  top: 0rpx;
  left: 0rpx;
}

.open_title {
  padding-left: 25rpx;
  padding-right: 25rpx;
  height: 88rpx;
  line-height: 88rpx;
  background: #f5f5f5;
}

.open {
  position: fixed;
  z-index: 100;
  bottom: 0rpx;
  left: 0rpx;
  width: 100%;
  background: #fff;
}

.selected_goods {
  font-size: 28rpx;
  color: #999;
}

.open_right>image {
  width: 31rpx;
  height: 31rpx;
  margin-right: 10rpx;
  position: relative;
  top: 5rpx;
}

.open_right>text {
  font-size: 28rpx;
  color: #999;
}

.part {
  padding-left: 25rpx;
  padding-right: 25rpx;
}

.part1 {
  padding-top: 33rpx;
  padding-bottom: 25rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.part1:last-child {
  border-bottom: none;
}

.part1>image {
  width: 180rpx;
  height: 180rpx;
  margin-right: 16rpx;
}

.part_right {
  width: 507rpx;
  position: relative;
}

.part_right_title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-top: 12rpx;
  margin-bottom: 83rpx;
}

/* .yuan{
  font-size: 24rpx;
  color: #EA9E17;
} */

.part_detail_left {
  font-size: 22rpx;
  color: #333;
}

.dign {
  position: absolute;
  top: 123rpx;
  right: 0rpx;
}

.footer_nav {
  width: 646rpx;
  padding-left: 45rpx;
  padding-right: 11rpx;
  height: 98rpx;
  line-height: 98rpx;
  margin: 0 auto;
  border-radius: 49rpx;
  box-shadow: 0px 0px 10px #f5f5f5;
  position: relative;
  /* box-shadow:  */
}

.footer_nav>image {
  width: 78rpx;
  height: 78rpx;
  margin-right: 15rpx;
  position: relative;
  top: -10rpx;
}

.footer_price {
  font-size: 35rpx;
  color: var(--themeC);
  font-weight: bold;
}

.footer_price>text {
  font-size: 25rpx;
  font-weight: normal;
}

.select_right {
  width: 180rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  margin-top: 12rpx;
  background: var(--themeBackC);
  border-radius: 40rpx;
  font-size: 32rpx;
  color: #fff;
  font-weight: bold;
}

.footer_num {
  position: absolute;
  top: -22rpx;
  left: 93rpx;
  width: 32rpx;
  height: 32rpx;
  border-radius: 100%;
  background: #e1372f;
  color: #fff;
  text-align: center;
  line-height: 32rpx;
  font-weight: bold;
  font-size: 24rpx;
}
