.icon image {
  width: 100%;
  height: 100%;
  border: 1rpx solid #ccc;
}

.userImg {
  width: 120rpx;
  height: 120rpx;
}

.userImg image {
  width: 100%;
  height: 100%;
  border: 1rpx solid #ccc;
  border-radius: 50%;
}

/** 全局css*/



.titleFont {
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(28, 28, 28, 1);
}

.infoFont {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
}

/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

/** 全局css*/

page {
  /**标题文字颜色*/
  --titleC: #ccc;
  --titleW: 500;
  /**内容文字颜色*/
  --contentC: #ccc;
  --contentW: 500;
  /**说明文字颜色*/
  --infoC: #ccc;
  --infoW: #ccc;
  /**标题文字颜色*/
  --themeC: #ccc;
  --themeBorderC: #ccc;
}

/** 全局css*/


.longBlockBtn {
  padding: 0 24rpx;
  background: var(--themeBackCG);
  border-radius: 47rpx;
  height: 94rpx;
  line-height: 94rpx;
  color: #fff;
  text-align: center;
}

/* 按钮样式 */

.cancelBtn {
  text-align: center;
  line-height: 55rpx;
  width: 160rpx;
  height: 55rpx;
  background: rgba(252, 206, 156, 0);
  border: 2rpx solid rgba(238, 238, 238, 1);
  border-radius: 5rpx;
}

/* 按钮样式 */

.primaryBtn {
  text-align: center;
  line-height: 55rpx;
  width: 160rpx;
  height: 55rpx;
  background: var(--themeBackC);
  border-radius: 5rpx;
}

.fl {
  float: left;
}

.fr {
  float: right;
}

.clear {
  clear: both;
}

.container-page {
  width: 100%;
  height: 100%;
}
