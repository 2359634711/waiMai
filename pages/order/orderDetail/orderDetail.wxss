/* pages/order/orderDetail/orderDetail.wxss */

.mainBox {
  position: absolute;
  height: 10000rpx;
  width: 100%;
  top: 90%;
}

.map {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.icon {
  width: 35rpx;
  height: 35rpx;
}

.payBoxTitle {
  background: #fff;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  margin: 0 25rpx;
  padding: 30rpx 25rpx;
  border-radius: 5rpx;
}

.payBoxTitle .icon {
  margin-right: 10rpx;
}

.payBoxContent {
  margin: 10rpx 25rpx;
  background: #fff;
  padding: 30rpx 25rpx;
  border-radius: 5rpx;
}

.payBoxContentTop {
  padding-bottom: 30rpx;
  border-bottom: 1rpx solid #f5f5f5;
}

.payBoxContentTop view:last-child {
  color: rgba(153, 153, 153, 1);
  margin-top: 17rpx;
}

.BtnBox {
  display: flex;
  flex-direction: row;
  margin: 30rpx 0;
}

.BtnBox view {
  margin-right: 20rpx;
}

.payBoxContentBottom {
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: var(--bgColor);
  padding: 35rpx 0rpx;
  margin: 0 -25rpx -26rpx -25rpx;
}

.payBoxContentBottom view:last-child {
  margin-left: 15rpx;
}

.orderBox {
  background: var(--bgColor);
}

.orderInfoBoxTitle {
  font-size: 30rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(28, 28, 28, 1);
  padding: 36rpx 24rpx;
  margin: 0 24rpx;
  background: #fff;
}

.orderTitle {
  font-size: 36rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(28, 28, 28, 1);
  padding: 60rpx 0 45rpx 25rpx;
}

/* goodInfo    可能要组建抽象 */

.orderGoodInfo {
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
  padding: 33rpx 24rpx;
  margin: 4rpx 24rpx 0 24rpx;
}

.orderGoodInfoLeft {
  display: flex;
  flex-direction: row;
  align-content: flex-start;
}

.orderGoodInfoLeft .icon {
  width: 90rpx;
  height: 90rpx;
}

.orderGoodInfoText {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  white-space: nowrap;
}

.orderGoodInfoMiddlePrice {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin-top: 20rpx;
}

.orderGoodInfoMiddlePrice view:last-child {
  font-size: 36rpx;
  font-weight: 800;
}

.orderGoodInfoMiddleInfo {
  margin-top: 10rpx;
  color: #999;
}

