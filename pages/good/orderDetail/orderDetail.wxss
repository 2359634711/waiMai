/* pages/good/orderDetail/orderDetail.wxss */

.backBox {
  width: 100%;
  height: 406rpx;
  background: var(--themeBackCG);
  position: absolute;
  z-index: -1;
}

.mainBox {
  padding: 25rpx 25rpx 150rpx 25rpx;
}

.mainTitle {
  font-size: 38rpx;
  font-family: PingFang-SC-Heavy;
  font-weight: 800;
  color: rgba(28, 28, 28, 1);
  margin: 10rpx 0 30rpx 0;
}

.posBox {
  border-radius: 5rpx;
}

/* 组件抽象orderItem Start */

.orderItem {
  padding: 38rpx 23rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  justify-content: space-between;
}

.orderItemPrice {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
  margin: 25rpx 0;
}

.orderItemPrice view:first-child {
  font-size: 24rpx;
}

.orderItemPrice view:last-child {
  font-size: 36rpx;
  font-weight: 800;
}

.orderItemInfo {
  font-size: 24rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(153, 153, 153, 1);
  line-height: 40rpx;
}

/* End */

.orderBox {
  margin-top: 20rpx;
  border-radius: 5rpx;
  overflow: hidden;
}

.totleBox {
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: flex-end;
  background: #fff;
  padding: 45rpx 26rpx;
  margin-top: 2rpx;
}

.totleBox>view:first-child {
  margin-right: 10rpx;
}

.bigPrice {
  font-size: 38rpx;
  font-weight: 800;
}

.payBack {
  width: 100%;
  position: fixed;
  bottom: 0;
}

.payBox {
  box-shadow: 0px 0px 15rpx 0rpx rgba(102, 102, 102, 0.1);
  margin: 30rpx 24rpx;
  background: #fff;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  border-radius: 100rpx;
  overflow: hidden;
}

.payBoxText {
  display: flex;
  flex-direction: row;
  align-items: flex-end;
}

.payBoxBtn {
  background: var(--themeBackCG);
  width: 216rpx;
  color: #fff;
  text-align: center;
  line-height: 90rpx;
  margin-left: 23rpx;
}

.payBoxText>view:first-child {
  color: #999;
}
